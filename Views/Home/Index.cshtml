<html>
<head>
    <title>Belajar ADS</title>
    <script src="~/js/Index/Home.js"></script>
    <script src="~/js/Index/Customer.js"></script>
    <script src="~/js/Index/Order.js"></script>
</head>
<body>
    
<div class="card shadow my-4">
    <div class="card-header py-3">
        <h4 class="float-left">TABLE ORDER</h4>
        <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#modalOrder" onclick="clearTextBoxOrder()">
            Tambah Data Order
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" style="width: 100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Order Num</th>
                    <th>Date</th>
                    <th>Cust_id</th>
                    <th>Total_rp</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody id="ajaxTable">

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card shadow my-4">
    <div class="card-header py-3">
        <h4 class="float-left">TABLE CUSTOMER</h4>
        <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#modalCustomer" onclick="clearTextBoxCustomer()">
            Tambah Data Customer
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" style="width: 100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Cust_id</th>
                    <th>Cust_name</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody id="ajaxTable2">

                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Create dan Edit Order -->
<div class="modal fade" id="modalOrder" data-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Data Customer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseModalOrder()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        @*<label for="id">ID</label>*@
                        <input type="number" class="form-control" id="form_id_order" placeholder="Auto Increment" disabled="disabled" hidden/>
                    </div>
                    <div class="form-group">
                        @*<label for="order_num">Order Num:</label>*@
                        <input type="number" class="form-control" id="form_order_num_order" placeholder="Auto Increment" disabled="disabled" hidden/>
                    </div>
                    <div class="form-group">
                        <label>Date:</label>
                        <input type="datetime-local" class="form-control" id="form_date_order" placeholder="Date"/>
                    </div>
                    <div class="form-group">
                        <label>Cust ID:</label>
                        <select id="form_cust_id_order" class="form-control" aria-label="Default select example">

                        </select>
                    </div>
                    <div class="form-group">
                        <label>Total Rp:</label>
                        <input type="number" class="form-control" id="form_total_rp_order" placeholder="Total Rp"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnCreateOrder" onclick="CreateOrder()">Create</button>
                <button type="button" class="btn btn-primary" id="btnUpdateOrder" style="display: none;" onclick="UpdateOrder()">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="CloseModalOrder()">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Create dan Edit Customer -->
<div class="modal fade" id="modalCustomer" data-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Data Customer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseModalCustomer()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        @*<label for="id">ID:</label>*@
                        <input type="text" class="form-control" id="form_id_customer" placeholder="Auto Increment" disabled="disabled" hidden/>
                    </div>
                    <div class="form-group">
                        @*<label for="cust_id">Cust ID:</label>*@
                        <input type="text" class="form-control" id="form_cust_id_customer" placeholder="cust id" disabled="disabled" hidden/>
                    </div>
                    <div class="form-group">
                        <label>Cust Name:</label>
                        <input type="text" class="form-control" id="form_cust_name_customer" placeholder="cust name"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnCreateCustomer" onclick="CreateCustomer()">Create</button>
                <button type="button" class="btn btn-primary" id="btnUpdateCustomer" style="display: none;" onclick="UpdateCustomer()">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="CloseModalCustomer()">Close</button>
            </div>
        </div>
    </div>
</div>

</body>
</html>
